network:
  id: 10
  name: cbdc-net
  orgs:
    - central-bank
    - government
  
  # docker network
  driver: "bridge"
  subnet: "172.19.0.0/16"

  validators:
    - central-bank.val0:
        # org has to be in orgs mentioned above
        org: central-bank
        ip: 127.0.0.1
        port: 30300
        rpc-port: 22000
        docker-ip: 172.19.0.10
        docker-port: 30300
        docker-rpc-port: 22000
        # do not use this passphrase in production
        accounts:
          # balance in WEI, below seen are 100 ETH
          # if you do not want any pre-allocated funds please put null and not 0!
          - account0:
              balance: 100000000000000000000
              passphrase: root
          - account1:
              balance: 100000000000000000000
              passphrase: root
    - central-bank.val1:
        org: central-bank
        ip: 127.0.0.1
        port: 30301
        rpc-port: 22001
        docker-ip: 172.19.0.20
        docker-port: 30300
        docker-rpc-port: 22000
    - government.val0:
        org: government
        ip: 127.0.0.1
        port: 30302
        rpc-port: 22002
        docker-ip: 172.19.0.30
        docker-port: 30300
        docker-rpc-port: 22000
    - government.val1:
        org: government
        ip: 127.0.0.1
        port: 30303
        rpc-port: 22003
        docker-ip: 172.19.0.40
        docker-port: 30300
        docker-rpc-port: 22000
  
  maintainers:
    - government.mnt0:
        org: government
        ip: 127.0.0.1
        port: 30304
        rpc-port: 22003
        docker-ip: 172.19.0.50
        docker-port: 30300
        docker-rpc-port: 22000
        accounts:
          - main:
              passphrase: root

  # contracts to be encoded into genesis block
  contracts:
    - dummy:
        path: ../contracts/Dummy.sol
        # addr: "0x0000000000000000000000000000000000000020"
    #- governing:
        #path: ../contracts/Governing.sol


